<?xml version="1.0"?>

<config>
  <tabs>
    <ditotracking translate="label" module="ditotracking">
      <label>Dito</label>
      <sort_order>99999</sort_order>
    </ditotracking>
  </tabs>
  <sections>
    <ditotracking_options translate="label" module="ditotracking">
      <label>Dito - Configuração</label>
      <tab>ditotracking</tab>
      <frontend_type>text</frontend_type>
      <sort_order>1000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>

      <groups>
        <app_config translate="label">
          <label>Aplicação</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>

          <fields>
            <dito_enabled>
              <label>Habilitar a Dito</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </dito_enabled>

            <api_key>
              <label>API Key</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </api_key>

            <app_secret>
              <label>App Secret</label>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </app_secret>
          </fields>
        </app_config>

        <track_config translate="label">
          <label>Eventos</label>
          <frontend_type>text</frontend_type>
          <sort_order>2</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>

          <fields>
            <!-- CATALOG -->

            <catalog_product_view>
              <label>Página do produto</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </catalog_product_view>

            <catalog_category_view>
              <label>Página da categoria</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </catalog_category_view>

            <!-- CATALOG SEARCH -->

            <catalogsearch_result>
              <label>Busca simples</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </catalogsearch_result>

            <catalogsearch_advanced_index>
              <label>Acesso a busca avançada</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </catalogsearch_advanced_index>

            <catalogsearch_advanced_result>
              <label>Busca avançada</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </catalogsearch_advanced_result>

            <!-- CHECKOUT -->

            <checkout_cart_index>
              <label>Página do carrinho</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>6</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </checkout_cart_index>

            <checkout_onepage_index>
              <label>Página checkout</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>7</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </checkout_onepage_index>

            <send_revenue>
              <label>Enviar compra</label>
              <comment>Marcando como "NÃO", os eventos de "comprou" e "comprou-produto" chegarão na Dito como "fez-pedido" e "fez-pedido-produto" e sem revenue.</comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>8</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </send_revenue>
          </fields>
        </track_config>

        <track_newsletter translate="label">
          <label>Newsletter</label>
          <frontend_type>text</frontend_type>
          <sort_order>3</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>

          <fields>
            <dito_newsletter_enabled>
              <label>Habilitar Newsletter</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </dito_newsletter_enabled>

            <name_selector>
              <label>Seletor Nome</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </name_selector>

            <email_selector>
              <label>Seletor E-mail</label>
              <frontend_type>text</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </email_selector>

            <btn_selector>
              <label>Seletor Botão</label>
              <frontend_type>text</frontend_type>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </btn_selector>
          </fields>
        </track_newsletter>

        <user_config translate="label">
          <label>Usuários</label>
          <frontend_type>text</frontend_type>
          <sort_order>4</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>

          <fields>
            <user_config_id_type>
              <label>Identificador do usuário CPF</label>
              <comment>Configure o identificador do usuário como "SIM", caso seja CPF, e "NÃO", caso seja e-mail. Caso o identificador seja CPF, o atributo do cliente equivalente a CPF, precisa ser preenchido.</comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>0</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </user_config_id_type>

            <user_config_cpf>
              <label>Atributo do cliente equivalente a CPF</label>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </user_config_cpf>

            <user_config_cellphone>
              <label>Atributo do cliente equivalente a Celular</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </user_config_cellphone>
          </fields>
        </user_config>

        <cache_config translate="label">
          <label>Cache</label>
          <frontend_type>text</frontend_type>
          <sort_order>5</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>

          <fields>
            <cache_strategy>
              <label>Usar estratégia para cache</label>
              <comment>Será feita uma requisição para buscar dados do usuário para cada page view.</comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </cache_strategy>
          </fields>
        </cache_config>
      </groups>
    </ditotracking_options>
  </sections>
</config>
